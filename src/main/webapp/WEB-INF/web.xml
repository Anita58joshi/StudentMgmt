<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/Persistance.xml</param-value>
    </context-param>

    <filter>
    <filter-name>SecurityFilter</filter-name>
    <filter-class>com.nepalaya.studentmgmt.filter.SecurityFilter</filter-class>
  </filter>

  <servlet>
    <servlet-name>Home</servlet-name>
    <servlet-class>com.nepalaya.studentmgmt.controller.HomeController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Student</servlet-name>
    <servlet-class>com.nepalaya.studentmgmt.controller.StudentController</servlet-class>
  </servlet>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
    <servlet-name>Home</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Student</servlet-name>
    <url-pattern>/students/*</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <filter-mapping>
    <filter-name>SecurityFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>